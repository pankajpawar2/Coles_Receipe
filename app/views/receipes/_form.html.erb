<%= form_with(model: [@collection,receipe], local: true) do |form| %>
  <% if receipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(receipe.errors.count, "error") %> prohibited this receipe from being saved:</h2>

      <ul>
      <% receipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :receipe_name %>
    <%= form.text_field :receipe_name %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_area :image_url %>
  </div>

  <div class="field">
    <%= form.label :prep_time_minutes %>
    <%= form.number_field :prep_time_minutes %>
  </div>

  <div class="field">
    <%= form.label :cooking_time_minutes %>
    <%= form.number_field :cooking_time_minutes %>
  </div>

  <div class="field">
    <%= form.label :difficulty_level %>
    <%= form.text_field :difficulty_level %>
  </div>

  <div class="field">
    <%= form.label :servings %>
    <%= form.number_field :servings %>
  </div>

  <div class="field">
    <%= form.label :ingredients %>
    <%= form.text_area :ingredients %>
  </div>

  <div class="field">
    <%= form.label :how_to_cook %>
    <%= form.text_area :how_to_cook %>
  </div>

  <div class="field">
    <%= form.label :collection_id %>
    <%= form.select :collection_id, options_for_select(Collection.all.collect { |u| [u.category_name,u.id]}, :selected => receipe.collection_id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
